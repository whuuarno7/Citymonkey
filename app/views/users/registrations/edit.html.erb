
<body id="bkgndedit">
<div class="container-fluid">
  <div class="row" id="fluidedit">
    <h2>Información de Usuario <%= current_user.name %></h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
      <div class="col-xs-12 col-sm-4 col-md-4">
         <div class="field"> 
            <%= f.label :name, "Nombre o NickName" %> <br />
             <div id="select">
            <%= f.text_field :name, autofocus: true%> 
              </div>
            </div>
          <div class="field">
            <%= f.label :email, "E-mail" %><br />
             <div id="select">
            <%= f.email_field :email, autofocus: true %>
          </div>
          </div>

          <%= f.label :sexo, "Sexo" %>
          <div id="select">
          <%= f.select :sexo, ['Hombre', 'Mujer', 'Intersex'] %>
         </div><br />
          <%= f.label :tel, "Telefono" %><i>(Uso promocional e informativo)</i><br /> 
           <div id="select">
          <%= f.text_field :tel %><br />
           </div> 
          <%= f.label :avatar, "Imagen de perfil"%>
          <%= f.file_field :avatar %><br />
           <%= f.label :background, "Fondo de perfil"%>
          <%= f.file_field :background %><br />


      </div>
      <div class="col-xs-12 col-sm-4 col-md-4">
        <div class="field">
          <%= f.label :bibliography, "Una pequeña reseña sobre ti" %><br /> 
           <div id="select">
          <%= f.text_field :bibliography %><br /> 
           </div>
        </div>
        <div class="field">       
          <%= f.label :borndate,"Fecha de nacimiento" %><br /> 
           <div id="select">
           <%= f.date_select :borndate,  start_year: 1920, use_month_numbers: true, prompt: { day: 'Día', month: 'Mes', year: 'Año' }, :order => [:day, :month, :year], selected: Date.today ,class:"form-control", placeholder:"Fecha de apertura o día del evento", autofocus: true %> 
                           </div>
         </div>
         <div class="field">      
          <%= f.label :locationborn, "Ciudad de nacimiento" %><br /> 
          <div id="select">
        
          <%= f.text_field :locationborn %><br /> 
          </div>
          
        </div>

        <div class="field">
          <%= f.label :location, "Ciudad Actual" %><br /> 
          <div id="select">
          <%= f.text_field :location %><br /> 
        </div>
          <%= f.label :website, "Tu website de contacto" %><br />
         <div id="select">
          <%= f.text_field :website %><br /> 
        </div>
        </div>
      
        </div>
      <div class="col-xs-12 col-sm-4 col-md-4">
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class="field">
      <%= f.label :password, 'Contraseña' %> <i>(En blanco si no desea cambiar la contraseña)</i><br />
      <%= f.password_field :password, autocomplete: "off" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation, "Repita la contraseña" %><br />
      <div id="select">
      <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

    <div class="field">
      <%= f.label :current_password %> <i>(Necesita su contraseña usual para salvar los cambios)</i><br />
      <div id="select">
      <%= f.password_field :current_password, autocomplete: "off" %>
      </div>
      <div class="actions" id="select">
      <%= f.submit "Guardar cambios" %>
    
  <%= link_to "Atrás", :back %>
  </div>
</div>
    </div>
  <% end %>
    </div>

      </div>
      <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
<% end %>
<% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<%= yield %>
</body>


  

   

    
   
    
    

 
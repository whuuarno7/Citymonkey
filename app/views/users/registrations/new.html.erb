
  <title>Registrate</title>


    <body id="bkgndsignup">
      <div  class="container-fluid">
        <div  class="row" id="fluidsu">
          <div class="col-xs-12 col-sm-12 col-md-12 form-group  " id="rowsignin">
            <div id="signupPage">
                    
                        <h2> <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>Registrate</h2> 

                        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                          <%= devise_error_messages! %>

                          <div class="field"> 
                            <%= f.label :name, "Nombre o NickName" %> <br />
                            <%= f.text_field :name, class:"form-control", placeholder:"Nombre", autofocus: true %>
                          </div>

                          <div class="field">
                            <%= f.label :email, "Email" %><br />
                            <%= f.email_field :email, class:"form-control", placeholder:"email", autofocus: true %>
                          </div>

                          <div class="field">
                            <%= f.label :sexo %><br />
                         

                          <div id="select"> <%= f.select :sexo, options_for_select(["Hombre", "Mujer", "Intersexual"]), class:"form-control", autofocus: true %> </div> <br /> 
                          </div>
                          
                          <div class="field">
                            <%= f.label :borndate, "Fecha de Nacimiento" %><br />
                           <div id="select">
                            <%= f.date_select :borndate,  start_year: 1920, use_month_numbers: true, prompt: { day: 'Día', month: 'Mes', year: 'Año' }, :order => [:day, :month, :year], selected: Date.today ,class:"form-control", placeholder:"Fecha de apertura o día del evento", autofocus: true %> 
                           </div>
                          </div>
                          

                          <div class="field">
                            <%= f.label :password, "contraseña"%>
                            <% if @validatable %>
                            <em>(<%= @minimum_password_length %> caracteres mínimos)</em>
                            <% end %><br />
                            <%= f.password_field :password, autocomplete: "off",class:"form-control", placeholder:"Inserte contraseña", autofocus: true %>
                          </div>

                          <div class="field">
                            <%= f.label :password_confirmation, "Confirme su contraseña" %><br />
                            <%= f.password_field :password_confirmation, autocomplete: "off", class:"form-control", placeholder: "Repita la contraseña", autofocus: true %>
                          </div>

                          <div class="actions"> <br />
                            <%= f.submit "Registrarse", class:"btn btn-default" %>
                          </div>

                        <% end %>

                        <%=  render "users/shared/links" %>
            </div>                  
          </div>
        </div>
      </div>
  
  </body>

